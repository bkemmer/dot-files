# This should be run under 'Red Hat Enterprise Linux'

# alias
alias clear_keyring="rm ~/.local/share/keyrings/login.keyring"

# Paths
BAT_PATH="$HOME/apps/bat"
[[ -d $BAT_PATH ]] && PATH="$BAT_PATH:$PATH"

FLAMESHOT_PATH="$HOME/apps/flameshot"
[[ -d $FLAMESHOT_PATH ]] && PATH="$FLAMESHOT_PATH:$PATH"

ACK_PATH="$HOME/apps/ack"
[[ -d $ACK_PATH ]] && PATH="$ACK_PATH:$PATH"

# functions
dl_and_mv_repo(){
    # $1 url to zip file with the master branch of the repository
    # $2 name of the unziped folder ex.: dot-file-main
    # $3 path to the download folder
    # $4 path to be installed  
    read -s -k "?Download $1 and press a key to continue..."
    echo ""
    cd $3
    unzip -qq $2.zip
    mv $2 $3
    rm -r $4/$2
    mv $3 $4/$2
    rm $2.zip
    echo ""
}

alias update_dot_files="dl_and_mv_repo https://github.com/bkemmer/dot-files/archive/refs/heads/main.zip dot-files-main dot-files $HOME/Downloads $HOME/projects"
